<?xml version="1.0" encoding="utf-8" ?>
<component name="MainScene" extends="Scene">
  <children>
    <!-- Background layers -->
    <Poster id="bgBottom" width="1920" height="1080" uri="pkg:/images/bg_morning.png" />
    <Poster id="bgTop" width="1920" height="1080" opacity="0.0" />
    <Poster id="photoBg" width="1920" height="1080" opacity="0.0" />
    <Rectangle id="photoOverlay" width="1920" height="1080" color="0x000000AA" opacity="0.0" />

    <!-- Card grid â€” respecting title safe zone (96px edges) -->
    <Group id="cardGrid">
      <ClockCard id="clockCard" />
      <WeatherCard id="weatherCard" />
      <CalendarCard id="calendarCard" />
      <CountdownCard id="countdownCard" />
      <QuoteCard id="quoteCard" />
      <NewsCard id="newsCard" />
      <SpotifyCard id="spotifyCard" />
      <SportsCard id="sportsCard" />
    </Group>

    <TickerCard id="tickerCard" />

    <!-- Photo component (invisible, just data) -->
    <PhotoCard id="photoCard" />

    <!-- Loading overlay -->
    <Rectangle id="loadingOverlay" width="1920" height="1080" color="0x0a0a1aff">
      <Label id="loadingLabel"
        text="JBTV"
        color="0x00D4AAFF"
        horizAlign="center"
        width="1920"
        translation="[0, 420]">
        <Font role="font" uri="pkg:/fonts/Inter-Thin.ttf" size="108" />
      </Label>
      <Label id="statusLabel"
        text="Searching for server..."
        color="0xFFFFFF44"
        horizAlign="center"
        width="1920"
        translation="[0, 550]">
        <Font role="font" uri="pkg:/fonts/Inter-Light.ttf" size="24" />
      </Label>
    </Rectangle>
  </children>
  <script type="text/brightscript" uri="pkg:/source/constants.brs" />
  <script type="text/brightscript" uri="pkg:/source/theme.brs" />
  <script type="text/brightscript" uri="pkg:/source/layout.brs" />
  <script type="text/brightscript" uri="MainScene.brs" />
</component>
